<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8-sm-6">
      <div>
        <div class="buddy_card">
          <div class="product-img"style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @buddy.photo.key, height: 400, width: 500 %>')">

          </div>
        </div>
        <div class="buddy_card">
          <p>My name is <%= buddy.name %> and I fall into the <%= buddy.category %> category</p>
          <p>Little description of me goes thus: <%= buddy.description %></p>
          <p>I am <%= buddy.age %> years old and I live in <%= buddy.address %></p>
        </div>
          <div class="d-flex">
            <div class="p-2">
              <% if @buddy.owner == current_user %>
                <%= link_to "You already added this buddy!", buddies_path(@buddy), class: "btn btn-outline-info" %>
                <span>
                <%= link_to "Update", edit_buddy_path, class: "btn btn-outline-success" %>
                <%= link_to "Delete buddy", buddy_path(@buddy), :confirm => 'Are you sure?', :method => :delete, class: "btn btn-outline-danger" %>
                </span>

              <% else %>
                <p><%= link_to "Engage this buddy", new_buddy_booking_path(@buddy), class: "btn btn-primary" %></p>
              <% end %>
            </div>
          <br>
          </div>
      </div>
    </div>
  </div>
  <%= link_to "back", buddies_path %>
</div>
