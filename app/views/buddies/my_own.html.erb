<div class="main">
  <br></br>
  <br></br>
  <div class="container">
    <%= cl_image_tag @current_user.avatar.key, width: 300, height: 250, crop: :fill, :quality=>"auto", :fetch_format=>:auto, class: "rounded-circle" %>
    <h3>Hi <%= current_user.nickname || current_user.email %>, here are your buddies:</h3>
    <br>
    <br>
    <br>

    <div class="row">
      <% @my_buddies.each do |buddy| %>
      <div class="col-12 col-md-6 col-lg-3">
        <%= render "shared/buddy_card", buddy: buddy %>

      </div>
      <% end %>
    </div>
  </div>
    <%= link_to "back", buddies_path %>
</div>
